
{
    "version": "0.2.0",
    "configurations": 
    [
        {
            "name": "Debugger",
            "type": "cppdbg",
            "request": "launch",

            "program": 
            // LINUX
            "${workspaceRoot}/build/debug_linux/physimos",
            // "${workspaceRoot}/build/debug_linux/src/lib/main_lib",
            // "${workspaceRoot}/build/debug_linux/src/lib/main_str",
            // "${workspaceRoot}/build/debug_linux/src/lib/main_file",
            // "${workspaceRoot}/build/debug_linux/src/file_format/json/main_json",
            // "${workspaceRoot}/build/debug_linux/src/phont/main_phont",
            // "${workspaceRoot}/build/debug_linux/src/opengl/main_opengl",

            // "${workspaceFolder}/build/debug_linux/src/lib/test_lib",

            // WINDOWS
            
            "args": [],
            "stopAtEntry": false,
            
            "cwd": 
            "${workspaceFolder}",
            // "${workspaceFolder}/src/lib",
            // "${workspaceFolder}/src/lib/json",
            
            "environment": [
                { "name": "PHYSIMOS_ROOT_DIR", "value": "${workspaceFolder}" }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": 
            // "str_build",
            "Debug build",

            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared",
                "close": false
            }

        },
    ]
}