{
    "version": 8,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 28,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default Config",
            "description": "Default build using Ninja generator",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/default",
            "cacheVariables": {
                "BUILD_TYPE_FROM_CLI": ""
            }
        },
        {
            "name": "debug_linux",
            "inherits": "default",
            "displayName": "Default Linux Config",
            "description": "Default Linux Config using Ninja generator",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/debug_linux",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            },
            "hidden": false
        },
        {
            "name": "debug_windows",
            "inherits": "default",
            "displayName": "Debug Windows Config",
            "description": "Default Windows Config using VS  generator",
            "generator": "Visual Studio 17 2022",
            "binaryDir": "${sourceDir}/build/debug_windows",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            },
            "hidden": false
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "configurePreset": "default",
            "hidden": false
        },
        {
            "name": "debug_linux",
            "configurePreset": "debug_linux",
            "hidden": false
        },
        {
            "name": "debug_windows",
            "configurePreset": "debug_windows",
            "hidden": false
        }
    ]
}